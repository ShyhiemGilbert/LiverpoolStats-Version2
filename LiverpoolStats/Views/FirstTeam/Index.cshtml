@model IEnumerable<LiverpoolStats.Models.LiverpoolFirstTeamStatsTbl>

@{
    ViewBag.Title = "Index";
}

<h2>First Team Stats</h2>
@using (Html.BeginForm())
{
    <p>
        Name: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.playerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerApps)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerGoals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerYellowCards)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerRedCards)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.playerImg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.playerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerApps)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerGoals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerYellowCards)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerRedCards)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.playerImg)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.playerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.playerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.playerId })
        </td>
    </tr>
}

</table>
